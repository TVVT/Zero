<!doctype html>
<html lang="zh">
<head>
    <meta charset="UTF-8">
    <title>1号店UIManager-<%=pageName %></title>
    <link rel="stylesheet" href="/manager/fonts/yhd-icon/style.css">
    <link rel="stylesheet" href="/manager/stylesheets/base.css">
    <link rel="stylesheet" href="/manager/stylesheets/manager_page.css">
</head>
<body page-name="<%=pageName %>" project-name="<%=projectName%>">
    <header>
        <h1>1UI</h1>
        <ul id="nav">
            <li class="icon-download" id="showModules"><i>下载模块</i></li>
            <li class="icon-qrcode" id="showQrCode"><i>二维码</i></li>
            <li class="icon-browser" id="showSource"><i>查看源码</i></li>
            <!-- <li class="icon-camera"><i>快照</i></li> -->
            <li class="icon-database" id="pageData"><i>页面数据</i></li>
            <li class="icon-info2" id="pageInfo"><i>显示信息</i></li>
            <li><a href="http://<%= ipAddress%>:<%= serverPort%>/<%=projectName %>/pages/preview/<%=pageName %>" class="icon-earth" target="_origin_view"><i>打开链接</i></a></li>
        </ul>
    </header>

    <div class="manager-content">
        <div class="manager-page-modules">
            <% for(i=0;i<htmls.length;i++){%>
                <div class="module-ui-wrapper">
                    <%- htmls[i]%>
                    <a class="module-ui-download" download href="/<%=projectName %>/components/download/<%=modules[i]%>">点击下载模块</a>
                </div>  
            <%}%>
        </div>

        <div class="manager-page-show">
            <!-- 引入html文件 -->
            <div id="iframe-wrapper">
                <iframe id="page-manager-iframe" name="page-manager-iframe" scrolling="yes" src="/<%=projectName %>/pages/preview/<%=pageName%>" frameborder="0" style="height:100%;overflow:auto;"></iframe>
            </div>
        </div>

        <!-- 查看源码 -->
        <div class="board page-source-board">
            <div class="page-source">
                <pre><%=pageSource%></pre>
            </div>
            <div class="close icon-cross3"></div>
        </div>
        <!-- 页面数据 -->
        <div class="board page-data-board">
            <div class="page-data">
                <pre><%=moduleDataToString%></pre>
            </div>
            <div class="close icon-cross3"></div>
        </div>
                
            
        <div class="manager-page-qrcode">
           <img qrCode="<%=randonNum%>" id="qrCodeImg" src="http://chart.apis.google.com/chart?cht=qr&chl=http://<%= ipAddress%>:<%= serverPort%>/<%=projectName %>/pages/preview/<%=pageName %>?clientId=<%=randonNum%>&chs=200x200" alt="">
            <div class="page-feedback"></div> 
        </div>
        
        <div class="manager-page-info">
            <div><label>页面：</label><span class="manager-page-attr-name"><%=moduleConfig.pageName||"未知"%> </span></div>
            <div><label>开发者：</label><span class="manager-page-attr-developper"><%=moduleConfig.developper||"未知"%></span></div>
            <div><label>邮箱：</label><span class="manager-page-attr-email"><%=moduleConfig.email||"未知"%></span></div>
        </div>

        

    </div>

    <footer>&copy; TvvT 2014.</footer>
    <script type="text/javascript" src="/manager/scripts/jquery/jquery.min.js"></script>
    <script type="text/javascript" src="/manager/scripts/manager_page.js"></script>
</body>
</html>